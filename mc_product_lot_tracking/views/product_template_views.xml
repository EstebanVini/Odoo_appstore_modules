<odoo>
    <record id="view_product_template_form_inherit_lot_company" model="ir.ui.view">
        <field name="name">product.template.form.lot.tracking.company</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="inside">
                <group name="tracking_company_group" string="Tracking by Company">
                    <field name="tracking_company_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="company_id"/>
                            <field name="tracking"/>
                        </list>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
